FROM mysql/mysql-server
MAINTAINER sankuhs99@gmail.com

RUN yum update -y && \
    yum install -y python-pip python-dev
RUN yum install python3

COPY ./requirements.txt /users/requirements.txt

WORKDIR /users

RUN yum install -r requirements.txt

COPY . /users

ENTRYPOINT [ "python" ]

CMD [ "users.py" ]

ENV TEAM_NAME "CC_0158_0115_0108"
