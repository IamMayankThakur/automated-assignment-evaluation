FROM debian:10.2

MAINTAINER Neel K
ENV TEAM_NAME=CC_0029_0120_0780_1142


RUN mkdir -p /root/main
COPY . /root/main
WORKDIR /root/main
RUN chmod +x /root/main/*.py
RUN chmod +x /root/main/*.sh


RUN apt-get update && \
    apt-get install -y python3-pip && \
    pip3 install flask gevent requests

EXPOSE 80


ENTRYPOINT ["./startup.sh"]
